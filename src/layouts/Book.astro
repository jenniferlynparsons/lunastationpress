---
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import PageContainer from "@components/PageContainer.astro";
import FormattedDate from "@components/FormattedDate.astro";
import CoverImage from "@components/CoverImage.astro";
import BookHero from "@components/BookHero.astro";
import AuthorBio from "@components/AuthorBio.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "@/consts";

type Props = CollectionEntry<"books">["data"];

const { title, pubDate, gumroad, weightless, kindle, kobo, coverImage, heroImage, author, paperback, payhip, itch, isbn13, pageCount, genre, smashwords } = Astro.props;

// Get related books by the same author
const allBooks = await getCollection("books");
const relatedBooks = allBooks.filter((book) => book.data.author === author && book.data.title !== title).slice(0, 3); // Show up to 3 related books

// Get author information
let authorData: CollectionEntry<"authors"> | undefined = undefined;
if (author) {
  try {
    const allAuthors = await getCollection("authors");
    // First try to match by name, then by slug derived from author name
    authorData = allAuthors.find((authorEntry) => {
      const authorSlug = author.toLowerCase().replace(/\s+/g, "-");
      return authorEntry.data.name === author || authorEntry.slug === authorSlug;
    });
  } catch (error) {
    // Silently handle missing author data
  }
}
---

<PageContainer title={`${title} - ${SITE_TITLE}`} description={SITE_DESCRIPTION} headerType="standard" containerClass="">
  <!-- Hero Section -->
  {heroImage && author && <BookHero title={title} author={author} heroImage={heroImage} />}

  <!-- Main Content Section -->
  <div class="container w-full flex flex-col lg:flex-row flex-grow overflow-hidden mb-20 mt-20 max-w-6xl px-4 sm:px-6 lg:px-8 mx-auto py-12">
    <!-- Book Cover -->
    <div class="w-full lg:w-1/3 mb-8 lg:mb-0 flex justify-center lg:justify-start">
      {
        coverImage ? (
          <div class="max-w-xs lg:max-w-sm">
            <CoverImage imagePath={coverImage} altText={`Cover of ${title}`} />
          </div>
        ) : (
          <div class="max-w-xs lg:max-w-sm bg-gray-200 dark:bg-gray-700 aspect-[2/3] rounded flex items-center justify-center">
            <span class="text-gray-500 dark:text-gray-400 text-sm">No cover available</span>
          </div>
        )
      }
    </div>

    <!-- Book Details -->
    <div class="w-full lg:w-2/3 lg:ml-12">
      <!-- Purchase Links -->
      <div class="mb-8 text-gray-700 dark:text-gray-300 space-y-3">
        {
          paperback && (
            <div>
              <span class="font-medium">Available in Print:</span>{" "}
              <a href={paperback} class="text-nymph hover:text-green underline">
                Amazon
              </a>
            </div>
          )
        }

        {
          (kindle || gumroad || payhip || kobo || weightless || itch || smashwords) && (
            <div>
              <span class="font-medium">Digital:</span>
              {kindle && (
                <a href={kindle} class="text-nymph hover:text-green underline">
                  Kindle
                </a>
              )}
              {kindle && (gumroad || payhip || kobo || weightless || itch || smashwords) && <span>&nbsp;| </span>}
              {gumroad && (
                <a href={gumroad} class="text-nymph hover:text-green underline">
                  Gumroad
                </a>
              )}
              {gumroad && (payhip || kobo || weightless || itch || smashwords) && <span>&nbsp;| </span>}
              {payhip && (
                <a href={payhip} class="text-nymph hover:text-green underline">
                  Payhip
                </a>
              )}
              {payhip && (kobo || weightless || itch || smashwords) && <span>&nbsp;| </span>}
              {kobo && (
                <a href={kobo} class="text-nymph hover:text-green underline">
                  Kobo
                </a>
              )}
              {kobo && (weightless || itch || smashwords) && <span>&nbsp;| </span>}
              {weightless && (
                <a href={weightless} class="text-nymph hover:text-green underline">
                  Weightless
                </a>
              )}
              {weightless && (itch || smashwords) && <span>&nbsp;| </span>}
              {itch && (
                <a href={itch} class="text-nymph hover:text-green underline">
                  itch.io
                </a>
              )}
              {itch && smashwords && <span>&nbsp;| </span>}
              {smashwords && (
                <a href={smashwords} class="text-nymph hover:text-green underline">
                  Smashwords
                </a>
              )}
            </div>
          )
        }
      </div>

      <!-- Divider -->
      <div class="border-t border-gray-200 dark:border-gray-700 mb-8"></div>

      <!-- Book Description -->
      <div class="prose prose-lg max-w-none mb-8 text-gray-700 dark:text-gray-300 leading-relaxed">
        <slot />
      </div>

      <!-- Divider -->
      <div class="border-t border-nymph dark:border-gray-700 mb-8"></div>

      <!-- Book Metadata -->
      <div class="mb-8">
        <div class="space-y-3 text-gray-700 dark:text-gray-300">
          <div><span class="font-medium">Genre:</span> {genre}</div>
          <div><span class="font-medium">Print Length:</span> {pageCount} pages</div>
          <div><span class="font-medium">Publication Date:</span> <FormattedDate date={pubDate} /></div>
          <div><span class="font-medium">ISBN:</span> {isbn13}</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Author Bio Section -->
  {author && authorData && <AuthorBio author={author} bio={authorData.body} website={authorData.data.website} photoUrl={authorData.data.photoUrl} socialLinks={authorData.data.socialLinks} />}

  <!-- Related Works Section -->
  {
    relatedBooks.length > 0 && (
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 mb-20">
        <h2 class="text-3xl font-light text-center mb-12 text-gray-800 dark:text-gray-100">Related works</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 justify-center">
          {relatedBooks.map((book) => (
            <div class="flex flex-col items-center text-center max-w-xs mx-auto">
              <a href={`/books/${book.slug}`} class="block group">
                <div class="flex justify-center mb-4">
                  {book.data.coverImage ? (
                    <CoverImage imagePath={book.data.coverImage} altText={book.data.title} className="h-72" />
                  ) : (
                    <div class="bg-gray-200 dark:bg-gray-700 aspect-[2/3] rounded flex items-center justify-center">
                      <span class="text-gray-500 dark:text-gray-400 text-sm">No cover available</span>
                    </div>
                  )}
                </div>
                <h3 class="text-lg font-medium text-gray-800 dark:text-gray-100">{book.data.title}</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">{book.data.author}</p>
              </a>
            </div>
          ))}
        </div>
      </div>
    )
  }
</PageContainer>
