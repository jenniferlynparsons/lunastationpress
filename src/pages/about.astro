---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import PageHeader from "@components/PageHeader.astro";
import { SITE_TITLE } from "@/consts";
import { getCollection } from "astro:content";

// Get publisher information from authors collection
const authors = await getCollection("authors");
const tara = authors.find((author) => author.data.name === "Tara Quinn Lindsey");
const jennifer = authors.find((author) => author.data.name === "Jennifer Lyn Parsons");

// Render the bio content
const { Content: JenniferContent } = jennifer ? await jennifer.render() : { Content: null };
const { Content: TaraContent } = tara ? await tara.render() : { Content: null };

// Import publisher photos
import taraPhoto from "@assets/author-photos/tara-quinn-lindsey.jpg";
import jenniferPhoto from "@assets/author-photos/jennifer-lyn-parsons.jpg";

const pageTitle = `About Us | ${SITE_TITLE}`;
const pageDescription = "Learn about Luna Station Press and our mission to publish speculative fiction, creative non-fiction, and poetry.";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={pageTitle} description={pageDescription} />
  </head>
  <body class="bg-white dark:bg-gray-900">
    <Header />

    <main>
      <PageHeader title="About Us" subtitle="The Buckaroo Banzai and Pinky Caruthers<br>of independent publishing." backgroundImage="/images/bg_071.jpg" />

      <!-- About Luna Station Press -->
      <section class="py-16">
        <div class="container mx-auto px-4 max-w-6xl">

          <!-- Publisher Bios - Two Column Layout -->
          <div class="max-w-5xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">

               <!-- Jennifer Lyn Parsons -->
              {jennifer && (
                <div class="text-center">
                  <!-- Photo -->
                  <div class="flex justify-center mb-6">
                    <img 
                      src={jenniferPhoto.src} 
                      alt="Photo of Jennifer Lyn Parsons" 
                      class="h-72 object-cover"
                      loading="lazy"
                      decoding="async"
                    />
                  </div>
                  
                  <!-- Name and Title -->
                  <h3 class="text-2xl font-medium mb-2 text-gray-800 dark:text-gray-200">{jennifer.data.name}</h3>
                  <p class="text-gray-600 dark:text-gray-400 mb-6">Founder, Editor-in-Chief</p>
                  
                  <!-- Social Links -->
                  <div class="flex justify-center gap-4 mb-8">
                    
                    {jennifer.data.website && (
                      <a href={jennifer.data.website} class="text-gray-500 dark:text-gray-400 " target="_blank" rel="noopener noreferrer">
                        Website
                      </a>
                    )}
                  </div>
                  
                  <!-- Bio Text -->
                  <div class="text-left text-gray-700 dark:text-gray-300 leading-relaxed space-y-4">
                    {JenniferContent && <JenniferContent />}
                  </div>
                </div>
              )}
              
              <!-- Tara Quinn Lindsey -->
              {tara && (
                <div class="text-center">
                  <!-- Photo -->
                  <div class="flex justify-center mb-6">
                    <img 
                      src={taraPhoto.src} 
                      alt="Photo of Tara Quinn Lindsey" 
                      class="h-72 object-cover"
                      loading="lazy"
                      decoding="async"
                    />
                  </div>
                  
                  <!-- Name and Title -->
                  <h3 class="text-2xl font-medium mb-2 text-gray-800 dark:text-gray-200">{tara.data.name}</h3>
                  <p class="text-gray-600 dark:text-gray-400 mb-6">Creative Director</p>
                  
                  <!-- Social Links -->
                  <div class="flex justify-center gap-4 mb-8">
                    
                    {tara.data.website && (
                      <a href={tara.data.website} class="text-gray-500 dark:text-gray-400 " target="_blank" rel="noopener noreferrer">
                        Website
                      </a>
                    )}
                  </div>
                  
                  <!-- Bio Text -->
                  <div class="text-left text-gray-700 dark:text-gray-300 leading-relaxed space-y-4">
                    {TaraContent && <TaraContent />}
                  </div>
                </div>
              )}

             

            </div>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
