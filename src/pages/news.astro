---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PageHeader from "../components/PageHeader.astro";
import { SITE_TITLE } from "../consts";

const pageTitle = `News | ${SITE_TITLE}`;
const pageDescription = "Latest news and updates from Luna Station Press";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={pageTitle} description={pageDescription} />
  </head>
  <body class="bg-white">
    <Header />

    <main>
      <PageHeader title="News" backgroundImage="/images/bg_071.jpg" />

      <section class="py-16">
        <div class="container mx-auto px-4 max-w-4xl">
          <div class="text-center mb-12">
            <p class="text-lg text-gray-600">Stay up to date with the latest news and announcements from Luna Station Press</p>
          </div>

          <!-- News content will be dynamically generated from blog posts -->
          <div class="space-y-8">
            <!-- News items will go here -->
            <div class="text-center text-gray-500">
              <p>News items will be displayed here once the blog content is set up.</p>
            </div>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
