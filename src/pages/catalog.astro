---
import PageContainer from "@components/PageContainer.astro";
import PageHeader from "@components/PageHeader.astro";
import BookCard from "@components/BookCard.astro";
import { SITE_TITLE } from "@/consts";
import { getCollection } from "astro:content";

const pageTitle = `Catalog | ${SITE_TITLE}`;
const pageDescription = "Browse our complete catalog of books and publications from Luna Station Press";

let books: any[] = [];
let genres: string[] = [];
let booksWithBadges: Set<string> = new Set();

try {
  // Get all books and sort by publication date (newest first)
  const allBooks = await getCollection("books");
  books = allBooks.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
  
  // Get unique genres for filtering
  genres = [...new Set(books.map(book => book.data.genre).filter(Boolean))];
  
  // Determine which books should show badges
  const newReleases = books.filter(book => book.data.newRelease);
  
  if (newReleases.length > 0) {
    // Show badges on books marked as new releases
    newReleases.forEach(book => booksWithBadges.add(book.slug));
  } else {
    // Fallback: show badges on 3 most recent books
    books.slice(0, 3).forEach(book => booksWithBadges.add(book.slug));
  }
} catch (error) {
  // Error already handled by try/catch block
}

---

<PageContainer 
  title={pageTitle} 
  description={pageDescription} 
  headerType="standard"
  containerClass=""
>
  <PageHeader title="Our Books" subtitle="Space fantasy, metaphysical explorations, stories for the young and young at heart, and of course, poetry." backgroundImage="/images/bg_071.jpg" />

  <section class="py-16">
    <div class="container mx-auto px-4 max-w-7xl">
      {books.length === 0 ? (
        <div class="text-center">
          <p class="text-lg text-gray-600">No books found. Please check the content collection.</p>
        </div>
      ) : (
        <>
          <!-- Genre Filter -->
          <div class="mb-12">
            <div class="flex justify-center">
              <div class="flex items-center gap-3">
                <label for="genre-filter" class="text-sm font-medium text-gray-700">
                  Filter by Genre:
                </label>
                <select 
                  id="genre-filter" 
                  class="px-4 py-2 border border-gray-300 rounded-md bg-white text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 min-w-[180px]"
                  aria-describedby="genre-filter-help"
                >
                  <option value="all">ðŸ“š All Books</option>
                  {genres.map(genre => (
                    <option value={genre}>{genre}</option>
                  ))}
                </select>
              </div>
            </div>
            <div id="genre-filter-help" class="sr-only">
              Use this dropdown to filter books by genre. Select "All Books" to see all available titles.
            </div>
          </div>

          <!-- Books Grid -->
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8" id="books-grid">
            {books.map((book) => (
              <BookCard 
                book={book}
                variant="grid"
                showBadge={booksWithBadges.has(book.slug)}
                showAuthor={false}
                containerClass="book-item"
              />
            ))}
          </div>
        </>
      )}
    </div>
  </section>

  <script is:inline>
    // Genre filtering functionality
    document.addEventListener('DOMContentLoaded', function() {
      const genreFilter = document.getElementById('genre-filter');
      const bookItems = document.querySelectorAll('.book-item');

      if (genreFilter) {
        genreFilter.addEventListener('change', function() {
          const selectedGenre = this.value;
          
          // Filter books based on selected genre
          bookItems.forEach(item => {
            if (selectedGenre === 'all' || item.dataset.genre === selectedGenre) {
              item.style.display = 'block';
            } else {
              item.style.display = 'none';
            }
          });
        });
      }
    });
  </script>
</PageContainer>
