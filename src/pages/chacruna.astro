---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PageHeader from "../components/PageHeader.astro";
import { SITE_TITLE } from "../consts";

const pageTitle = `Chacruna | ${SITE_TITLE}`;
const pageDescription = "Chacruna - Special publications from Luna Station Press";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={pageTitle} description={pageDescription} />
  </head>
  <body class="bg-white">
    <Header />

    <main>
      <PageHeader title="Chacruna" backgroundImage="/images/bg_071.jpg" />

      <section class="py-16">
        <div class="container mx-auto px-4 max-w-4xl">
          <div class="prose prose-lg mx-auto">
            <p class="text-lg text-gray-600 leading-relaxed">Chacruna represents our special publications line, featuring unique works that don't fit into our standard catalog format.</p>

            <p class="text-lg text-gray-600 leading-relaxed">These publications explore the boundaries of genre fiction and creative non-fiction, often featuring experimental works or special collections.</p>

            <div class="text-center mt-12">
              <a href="/catalog" class="inline-block bg-purple-800 hover:bg-purple-700 text-white font-medium py-3 px-8 rounded-lg transition-colors duration-200"> View Publications </a>
            </div>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
