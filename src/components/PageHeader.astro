---
const { title, backgroundImage, subtitle } = Astro.props;
---

<section class="relative py-24 md:py-32 flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  {
    backgroundImage && (
      <div class="absolute inset-0 z-0">
        <img src={backgroundImage} alt="" class="w-full h-full object-cover" loading="eager" decoding="async" />
        <div class="absolute inset-0 bg-black bg-opacity-50" />
      </div>
    )
  }

  <!-- Content -->
  <div class="relative z-10 text-center text-white px-4">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-light tracking-wide mb-4">
      {title}
    </h1>
    {subtitle && <p class="text-xl md:text-2xl font-light opacity-90 max-w-2xl mx-auto" set:html={subtitle} />}
  </div>
</section>
