---
import BookCard from './BookCard.astro';
import { getCollection } from 'astro:content';

// Get all books from the content collection
const allBooks = await getCollection('books');

// Get books marked as new releases
const newReleases = allBooks
  .filter(book => book.data.newRelease)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3);

// If no books marked as new releases, fall back to the 3 most recent books
const featuredBooks = newReleases.length > 0 
  ? newReleases 
  : allBooks
      .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
      .slice(0, 3);
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  {featuredBooks.map((book) => (
    <BookCard 
      book={book}
      variant="featured"
      showAuthor={true}
      showBadge={book.data.newRelease}
      preferCoverImage={true}
    />
  ))}
</div>
