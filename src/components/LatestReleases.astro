---
import BookCard from './BookCard.astro';

// Hardcoded featured books for the home page
// These could eventually pull from the books content collection
const featuredBooks = [
  {
    slug: "take-on-me",
    data: {
      title: "Take On Me",
      author: "Jennifer Lyn Parsons",
      coverImage: "take-on-me-cover.jpg"
    }
  },
  {
    slug: "bedtime-stories",
    data: {
      title: "Bedtime Stories",
      author: "Tara Lindsey",
      coverImage: "bedtimestories-cover.jpg"
    }
  },
  {
    slug: "best-of-lsq",
    data: {
      title: "LSQ Issue 062",
      author: "Luna Station Quarterly",
      coverImage: "062-cover.jpg"
    }
  }
];
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  {featuredBooks.map((book) => (
    <BookCard 
      book={book}
      variant="featured"
      showAuthor={true}
    />
  ))}
</div>
