---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const { imagePath, altText, className } = Astro.props;

// Handle undefined or empty imagePath
if (!imagePath) {
  throw new Error(`CoverImage component requires a valid imagePath, received: ${imagePath}`);
}

const fullImagePath = `/src/assets/cover-images/${imagePath}`;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/cover-images/*.{jpeg,jpg,png,gif}");
if (!images[fullImagePath]) {
  throw new Error(`Cover image "${fullImagePath}" does not exist. Available images: ${Object.keys(images).join(", ")}`);
}
---

<Image src={images[fullImagePath]()} alt={altText} │ │ class:list={["!m-0 w-auto", className]} />
