---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

export interface Props {
  title?: string;
  description?: string;
  headerType?: "hero" | "standard";
  mainClass?: string;
  containerClass?: string;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION, headerType = "standard", mainClass = "min-h-screen", containerClass = "container mx-auto px-4 py-12 max-w-6xl" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="bg-white">
    {headerType === "hero" && <Header showHero={true} />}
    {headerType === "standard" && <Header showHero={false} />}

    <main class={mainClass}>
      {
        containerClass ? (
          <div class={containerClass}>
            <slot />
          </div>
        ) : (
          <slot />
        )
      }
    </main>

    <Footer />
  </body>
</html>
