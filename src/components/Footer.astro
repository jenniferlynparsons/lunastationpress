---
import { SITE_TITLE } from "../consts";
import SocialMediaIcon from "./SocialMediaIcon.astro";
---

<footer class="bg-black dark:bg-gray-950 text-white relative overflow-hidden" role="contentinfo">
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="w-full h-full" style="background-image: url('/images/bg_031.png'); background-repeat: repeat;"></div>
  </div>

  <!-- Footer content -->
  <div class="relative z-10">
    <!-- Top section -->
    <div class="container mx-auto px-4 py-12">
      <div class="flex flex-col items-center text-center max-w-2xl mx-auto">
        <!-- Logo -->
        <a href="/" class="mb-6">
          <img src="/images/logo.png" alt={SITE_TITLE} class="h-12 w-auto opacity-90" loading="lazy" decoding="async" />
        </a>
      </div>
    </div>
  </div>
</footer>
